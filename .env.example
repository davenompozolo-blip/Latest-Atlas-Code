# ===================================================================
# ATLAS TERMINAL v10.0 - ENVIRONMENT VARIABLES TEMPLATE
# ===================================================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to git (it's in .gitignore)
#
# Usage:
#   cp .env.example .env
#   nano .env  # Edit with your values
#

# ===================================================================
# INVESTOPEDIA CREDENTIALS
# ===================================================================

INVESTOPEDIA_EMAIL=davenompozolo@gmail.com
INVESTOPEDIA_PASSWORD=Hlobo1hlobo@123

# ===================================================================
# API KEYS - DATA SOURCES
# ===================================================================

# Alpha Vantage (Free tier: 5 calls/min)
# Get your key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Financial Modeling Prep (Free tier: 250 calls/day)
# Get your key: https://financialmodelingprep.com/developer/docs/
FMP_KEY=your_fmp_key_here

# Polygon.io (Paid: $29+/month)
# Get your key: https://polygon.io/
POLYGON_KEY=your_polygon_key_here

# IEX Cloud (Free tier available)
# Get your key: https://iexcloud.io/
IEX_CLOUD_KEY=your_iex_key_here

# Finnhub (Free tier available)
# Get your key: https://finnhub.io/
FINNHUB_KEY=your_finnhub_key_here

# ===================================================================
# ENCRYPTION & SECURITY
# ===================================================================

# Secret key for encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# JWT secret for authentication (if using)
JWT_SECRET=your_jwt_secret_here

# ===================================================================
# DATABASE (if using)
# ===================================================================

DATABASE_URL=sqlite:///atlas_terminal.db
# Or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/atlas_terminal

# ===================================================================
# EMAIL NOTIFICATIONS (Optional)
# ===================================================================

# SMTP settings for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# Notification email recipient
NOTIFICATION_EMAIL=your_email@gmail.com

# ===================================================================
# CLOUD STORAGE (Optional)
# ===================================================================

# AWS credentials (if using S3 for data storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=atlas-terminal-data

# Google Cloud credentials (if using)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GCS_BUCKET_NAME=atlas-terminal-data

# ===================================================================
# REDIS CACHE (Optional)
# ===================================================================

# Redis for distributed caching
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# ===================================================================
# MONITORING & LOGGING
# ===================================================================

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===================================================================
# DEPLOYMENT SETTINGS
# ===================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (only for development!)
DEBUG=true

# Port for Streamlit server
PORT=8501

# ===================================================================
# FEATURE FLAGS
# ===================================================================

# Enable/disable features
ENABLE_QUANT_OPTIMIZER=true
ENABLE_INVESTOPEDIA_INTEGRATION=true
ENABLE_MULTI_SOURCE_DATA=true
ENABLE_LIVE_DATA=true
ENABLE_AUTO_REFRESH=true

# Experimental features
ENABLE_MACHINE_LEARNING=false
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_OPTIONS_STRATEGIES=false
ENABLE_CRYPTO=false

# ===================================================================
# PORTFOLIO DEFAULTS
# ===================================================================

DEFAULT_LEVERAGE=2.0
DEFAULT_RISK_FREE_RATE=0.03
DEFAULT_MIN_WEIGHT=0.05
DEFAULT_MAX_WEIGHT=0.30

# ===================================================================
# RATE LIMITING
# ===================================================================

RATE_LIMIT_ALPHA_VANTAGE=0.083
RATE_LIMIT_YAHOO=1.0
RATE_LIMIT_FMP=0.5
RATE_LIMIT_WEB_SCRAPING=0.5

# ===================================================================
# CACHE SETTINGS
# ===================================================================

CACHE_DURATION_REAL_TIME=15
CACHE_DURATION_FRESH=60
CACHE_DURATION_RECENT=300
CACHE_DURATION_STALE=3600

# ===================================================================
# OPTIMIZATION SETTINGS
# ===================================================================

MAX_ITERATIONS=1000
FUNCTION_TOLERANCE=1e-9
GRADIENT_TOLERANCE=1e-6

# ===================================================================
# MONTE CARLO SETTINGS
# ===================================================================

DEFAULT_MONTE_CARLO_SIMULATIONS=10000
MONTE_CARLO_DAYS=252

# ===================================================================
# TIMEZONE
# ===================================================================

MARKET_TIMEZONE=America/New_York

# ===================================================================
# PERFORMANCE
# ===================================================================

MAX_WORKERS=4
REQUEST_TIMEOUT=10
MAX_RETRIES=3

# ===================================================================
# SESSION
# ===================================================================

SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=3

# ===================================================================
# WEBHOOKS (Optional)
# ===================================================================

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Slack webhook for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ===================================================================
# CUSTOM SETTINGS
# ===================================================================

# Add any custom environment variables below this line
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2

# ===================================================================
# NOTES
# ===================================================================
#
# SECURITY REMINDERS:
# - Never commit .env file to git
# - Keep API keys secret
# - Rotate keys regularly
# - Use strong passwords
# - Enable 2FA where possible
